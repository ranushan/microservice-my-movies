{
  "compilerOptions": {
    "skipLibCheck": true,
    "sourceMap": false,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators":true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,    
    "target": "es2016",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": ["es2016"],
    
    "paths": {
      "@common/*"     : ["src/common/*"],
      "@config"       : ["src/config/index.ts"],
      
      "@data/*"       : ["src/data/*"],
      "@helper/*"     : ["src/helper/*"],
      "@repository/*" : ["src/repository/*"],   
      "@service/*"    : ["src/service/*"]        
    },
    "declaration": false,
    "noLib": false,
    "pretty": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitUseStrict": false,
    "listFiles": false,
    "noEmitHelpers": false,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
  "compileOnSave": true  
}
   